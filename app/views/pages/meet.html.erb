<div class="section-container">
  <h1 class="page-title">Meet with me</h1>

  <!-- Scheduling Link -->
  <div class="text-center mb-8">
    <%= link_to @bookings_url, target: "_blank", rel: "noopener noreferrer", class: "inline-block px-6 py-3 text-lg font-semibold rounded-lg transition-colors", style: "background-color: var(--color-primary-800); color: #ffffff; text-decoration: none;", onmouseover: "this.style.backgroundColor='var(--color-primary-700)'", onmouseout: "this.style.backgroundColor='var(--color-primary-800)'" do %>
      Schedule a meeting with me
    <% end %>
  </div>

  <!-- Calendar Embed -->
  <div class="card">
    <div class="calendar-container" style="position: relative; padding-bottom: 75%; height: 0; overflow: hidden;">
      <iframe src="<%= @calendar_url %>"
              style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; border: none;"
              frameborder="0"
              scrolling="yes">
      </iframe>
    </div>
  </div>
</div>
