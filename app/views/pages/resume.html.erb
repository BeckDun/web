<div class="section-container">
  <div class="max-w-4xl mx-auto">

    <!-- Header with Download Button -->
    <div class="text-center mb-8">
      <a href="https://beckdun.github.io/beckett-dunlavy-resume.pdf"
         class="inline-flex items-center btn-primary"
         target="_blank">
        <i class="fas fa-download mr-2"></i>
        Download PDF Resume
      </a>
    </div>

    <!-- Resume Header Card -->
    <div class="rounded-lg p-8 mb-12 shadow-lg" style="background: linear-gradient(to right, var(--color-primary-900), var(--color-primary-800)); color: #ffffff;">
      <h1 class="text-4xl font-bold mb-2" style="color: #ffffff;">Beckett Dunlavy</h1>
      <p class="text-xl mb-4" style="color: #ffffff;">Research Assistant (UNM) and HPC User Support (CARC)</p>
      <div class="flex flex-wrap gap-4 text-sm" style="color: #ffffff;">
        <span><i class="fas fa-envelope mr-2"></i>beckett.dunlavy@gmail.com</span>
        <span><i class="fas fa-map-marker-alt mr-2"></i>Albuquerque, NM</span>
        <a href="https://github.com/beckdun" target="_blank" class="hover:text-gray-100 transition-colors">
          <i class="fab fa-github mr-2"></i>@beckdun
        </a>
        <a href="http://linkedin.com/in/beckettd/" target="_blank" class="hover:text-gray-100 transition-colors">
          <i class="fab fa-linkedin mr-2"></i>Beckett Dunlavy
        </a>
      </div>
    </div>

    <!-- EXPERIENCE SECTION -->
    <div class="mb-16">
      <h2 class="section-divider">
        <i class="fas fa-briefcase mr-3"></i>
        Experience
      </h2>

      <div class="space-y-6 mt-8">
        <% @experience.each do |job| %>
          <div class="card">
            <div class="flex flex-col md:flex-row md:items-start md:justify-between mb-3">
              <!-- Logo on the left -->
              <% if job[:logo] %>
                <div class="company-logo-container mb-3 md:mb-0 md:mr-4 flex-shrink-0">
                  <% if job[:logo_url] %>
                    <a href="<%= job[:logo_url] %>" target="_blank" rel="noopener noreferrer">
                      <img src="<%= job[:logo] %>"
                           alt="<%= job[:organization] %> logo"
                           class="company-logo w-12 h-12"
                           onerror="this.style.display='none'">
                    </a>
                  <% else %>
                    <img src="<%= job[:logo] %>"
                         alt="<%= job[:organization] %> logo"
                         class="company-logo w-12 h-12"
                         onerror="this.style.display='none'">
                  <% end %>
                </div>
              <% end %>

              <div class="flex-1">
                <h3 class="text-xl font-bold mb-1" style="color: #ffffff;">
                  <%= job[:title] %>
                </h3>
                <p class="text-lg mb-1" style="color: #ffffff;">
                  <i class="fas fa-building mr-2 text-sm"></i>
                  <%= job[:organization] %>
                </p>
                <p class="text-sm" style="color: #ffffff;">
                  <i class="fas fa-map-marker-alt mr-2"></i>
                  <%= job[:location] %>
                </p>
              </div>
              <div class="flex items-center gap-2 mt-2 md:mt-0">
                <% if job[:current] %>
                  <span class="current-badge"></span>
                <% end %>
                <span class="date-badge" style="color: #ffffff;">
                  <i class="fas fa-calendar mr-1"></i>
                  <%= job[:start_date] %> - <%= job[:end_date] %>
                </span>
              </div>
            </div>

            <ul class="responsibility-list">
              <% job[:responsibilities].each do |responsibility| %>
                <li style="color: #ffffff;"><%= responsibility %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
    </div>

    <!-- EDUCATION SECTION -->
    <div class="mb-16">
      <h2 class="section-divider">
        <i class="fas fa-graduation-cap mr-3"></i>
        Education
      </h2>

      <div class="space-y-6 mt-8">
        <% @education.each do |edu| %>
          <div class="card">
            <div class="flex flex-col md:flex-row md:items-start md:justify-between mb-3">
              <div class="flex-1">
                <h3 class="text-xl font-bold mb-1" style="color: #ffffff;">
                  <%= edu[:degree] %>
                </h3>
                <p class="text-lg mb-1" style="color: #ffffff;">
                  <i class="fas fa-university mr-2 text-sm"></i>
                  <%= edu[:institution] %>
                </p>
                <p class="text-sm" style="color: #ffffff;">
                  <i class="fas fa-map-marker-alt mr-2"></i>
                  <%= edu[:location] %>
                </p>
              </div>
              <div class="text-right mt-2 md:mt-0">
                <span class="date-badge block mb-2" style="color: #ffffff;">
                  <i class="fas fa-calendar mr-1"></i>
                  <%= edu[:graduation] %>
                </span>
                <% if edu[:gpa] %>
                  <span class="gpa-badge" style="color: #ffffff;">
                    <i class="fas fa-star mr-1"></i>
                    GPA: <%= edu[:gpa] %>
                  </span>
                <% end %>
              </div>
            </div>

            <% if edu[:focus] %>
              <div class="mb-3">
                <span class="font-semibold" style="color: #ffffff;">Focus: </span>
                <span style="color: #ffffff;"><%= edu[:focus] %></span>
              </div>
            <% end %>

            <% if edu[:honors].present? %>
              <div class="mb-3">
                <h4 class="font-semibold mb-2 flex items-center" style="color: #ffffff;">
                  <i class="fas fa-award mr-2 text-sm" style="color: #ffffff;"></i>
                  Honors & Awards:
                </h4>
                <ul class="honor-list">
                  <% edu[:honors].each do |honor| %>
                    <li style="color: #ffffff;"><%= honor %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- EVENTS & ACTIVITIES SECTION -->
    <div class="mb-16">
      <h2 class="section-divider">
        <i class="fas fa-calendar-alt mr-3"></i>
        Events & Activities
      </h2>

      <div class="space-y-8 mt-8">
        <% @resume_events.each do |event| %>
          <div class="card">
            <div class="flex flex-col md:flex-row md:items-start md:justify-between mb-3">
              <!-- Logo on the left -->
              <% if event[:logo] %>
                <div class="company-logo-container mb-3 md:mb-0 md:mr-4 flex-shrink-0">
                  <% if event[:url] %>
                    <a href="<%= event[:url] %>" target="_blank" rel="noopener noreferrer">
                      <img src="<%= event[:logo] %>"
                           alt="<%= event[:name] %> logo"
                           class="company-logo w-12 h-12"
                           onerror="this.style.display='none'">
                    </a>
                  <% else %>
                    <img src="<%= event[:logo] %>"
                         alt="<%= event[:name] %> logo"
                         class="company-logo w-12 h-12"
                         onerror="this.style.display='none'">
                  <% end %>
                </div>
              <% end %>

              <div class="flex-1">
                <h3 class="text-xl font-bold mb-1" style="color: #ffffff;">
                  <%= event[:name] %>
                </h3>
                <% if event[:full_name] %>
                  <p class="text-sm mb-1 italic" style="color: #ffffff;">
                    <%= event[:full_name] %>
                  </p>
                <% end %>
                <p class="text-lg mb-1" style="color: #ffffff;">
                  <i class="fas fa-user-circle mr-2 text-sm"></i>
                  <%= event[:role] %>
                </p>
                <p class="text-sm" style="color: #ffffff;">
                  <i class="fas fa-map-marker-alt mr-2"></i>
                  <%= event[:location] %>
                </p>
              </div>
              <div class="flex items-center gap-2 mt-2 md:mt-0">
                <span class="date-badge" style="color: #ffffff;">
                  <i class="fas fa-calendar mr-1"></i>
                  <%= event[:date] %>
                </span>
              </div>
            </div>

            <p class="mt-3" style="color: #ffffff; line-height: 1.6;">
              <%= event[:description] %>
            </p>

            <% if event[:url] %>
              <div class="mt-3">
                <a href="<%= event[:url] %>"
                   target="_blank"
                   rel="noopener noreferrer"
                   class="inline-flex items-center text-sm font-medium transition-colors"
                   style="color: #ffffff;"
                   onmouseover="this.style.color='#ffffff'"
                   onmouseout="this.style.color='#ffffff'">
                  Learn More <i class="fas fa-external-link-alt ml-2"></i>
                </a>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- SKILLS SECTION -->
    <div class="mb-16">
      <h2 class="section-divider">
        <i class="fas fa-code mr-3"></i>
        Technical Skills
      </h2>

      <div class="space-y-8 mt-8">
        <div class="card">
          <!-- Development -->
          <div class="mb-6">
            <h3 class="text-lg font-semibold mb-3 flex items-center" style="color: #ffffff;">
              <i class="fas fa-laptop-code mr-2 text-sm" style="color: #ffffff;"></i>
              Development
            </h3>
            <div class="flex flex-wrap gap-2">
              <% @skills[:programming_languages].each do |skill| %>
                <span class="skill-badge" style="color: #ffffff;"><%= skill %></span>
              <% end %>
            </div>
          </div>

          <!-- HPC -->
          <div class="mb-6">
            <h3 class="text-lg font-semibold mb-3 flex items-center" style="color: #ffffff;">
              <i class="fas fa-microchip mr-2 text-sm" style="color: #ffffff;"></i>
              HPC
            </h3>
            <div class="flex flex-wrap gap-2">
              <% @skills[:hpc_technologies].each do |skill| %>
                <span class="skill-badge hpc-skill" style="color: #ffffff;"><%= skill %></span>
              <% end %>
            </div>
          </div>

          <!-- Tools -->
          <div>
            <h3 class="text-lg font-semibold mb-3 flex items-center" style="color: #ffffff;">
              <i class="fas fa-tools mr-2 text-sm" style="color: #ffffff;"></i>
              Tools
            </h3>
            <div class="flex flex-wrap gap-2">
              <% @skills[:tools_platforms].each do |skill| %>
                <span class="skill-badge" style="color: #ffffff;"><%= skill %></span>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
