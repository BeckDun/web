<div class="section-container">
  <h1 class="page-title">Projects</h1>

  <div class="max-w-5xl mx-auto">
    <div class="grid gap-8 md:grid-cols-2">
      <% @projects.each do |project| %>
        <div class="card hover:shadow-xl transition-all duration-200 flex flex-col">
          <div class="flex-grow">
            <div class="flex items-start justify-between mb-3">
              <h2 class="text-2xl font-bold" style="color: #e5e7eb;"><%= project[:title] %></h2>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium flex-shrink-0 ml-2" style="background-color: var(--color-primary-900); color: #9ca3af;">
                <%= project[:date] %>
              </span>
            </div>

            <p class="mb-4" style="color: #9ca3af;"><%= project[:description] %></p>

            <div class="mb-4">
              <h3 class="font-semibold mb-2 text-sm" style="color: #e5e7eb;">Technologies:</h3>
              <div class="flex flex-wrap gap-2">
                <% project[:technologies].each do |tech| %>
                  <span class="px-2 py-1 rounded text-xs" style="background-color: var(--color-primary-900); color: #9ca3af;">
                    <%= tech %>
                  </span>
                <% end %>
              </div>
            </div>
          </div>

          <% if project[:github_url] %>
            <div class="pt-4 border-t" style="border-color: var(--color-primary-800);">
              <%= link_to project[:github_url], target: "_blank", class: "inline-flex items-center font-medium", style: "color: #9ca3af;", onmouseover: "this.style.color='#e5e7eb'", onmouseout: "this.style.color='#9ca3af'" do %>
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                  <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                </svg>
                View on GitHub
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
